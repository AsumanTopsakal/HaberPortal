@model AboutPage
@{
    ViewBag.AdminTitle = "Hakkımızda düzenleme";
}
@using (Html.BeginForm("Edit", "About", FormMethod.Post))
{


    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.DisplayNameFor(i=>i.TitleName)

            </div>

            <div class="col">

                @Html.EditorFor(model => model.TitleName, new { htmlAttributes = new { @class = "form-control", placeholder = "Başlık giriniz." } })
            </div>

        </div>

    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
               @Html.LabelFor(i=>i.AboutDescription)
            </div>
            <div class="col">

                @Html.EditorFor(model => model.AboutDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "İçerik giriniz." } })
            </div>

        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="Düzenle" class="btn btn-info" />

    </div>



}  